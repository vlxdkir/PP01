<Page x:Class="CoffeeShop.Views.ReportsPage.RevenueReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoffeeShop.Views.ReportsPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RevenueReportPage">

    <Grid Background="#f0f0f0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Секция выбора периода -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <TextBlock Text="Период с:" FontSize="16" FontWeight="Bold" Margin="5" VerticalAlignment="Center"/>
            <DatePicker x:Name="StartDatePicker" Margin="5"/>
            <TextBlock Text="по:" FontSize="16" FontWeight="Bold" Margin="5" VerticalAlignment="Center"/>
            <DatePicker x:Name="EndDatePicker" Margin="5"/>
            <Button Content="Сформировать отчет" Click="GenerateReport_Click" Margin="5" Style="{StaticResource ButtonStyle}" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Секция отображения данных отчета -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="10" Margin="10" BorderBrush="#DDD" BorderThickness="1">
            <DataGrid x:Name="RevenueDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" Margin="10" Style="{StaticResource ReportDGV}" SelectionChanged="RevenueDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="*" FontSize="14"/>
                    <DataGridTextColumn Header="Количество заказов" Binding="{Binding OrderCount}" Width="*" FontSize="14"/>
                    <DataGridTextColumn Header="Общая выручка" Binding="{Binding TotalRevenue}" Width="*" FontSize="14"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Секция отображения итогов -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock Text="Итоговая выручка:" FontSize="16" FontWeight="Bold" Margin="5"/>
            <TextBlock x:Name="TotalRevenueTextBlock" FontSize="16" Margin="5"/>
            <Button Content="Печать отчета" Click="PrintReport_Click" Margin="5" Style="{StaticResource ButtonStyle}" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
