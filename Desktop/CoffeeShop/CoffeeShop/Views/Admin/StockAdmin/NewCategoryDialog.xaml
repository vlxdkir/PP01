<Window x:Class="CoffeeShop.Views.Admin.StockAdmin.NewCategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeShop.Views.Admin.StockAdmin"
        mc:Ignorable="d"
        Title="Новая категория" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Введите название новой категории:" FontSize="14" Margin="5"/>
            <TextBox x:Name="CategoryNameTextBox" Width="200" Margin="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Создать" Width="100" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Click="CreateButton_Click"/>
                <Button Content="Отмена" Width="100" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
